{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:recommended",
      "docker:pinDigests",
      "helpers:pinGitHubActionDigests",
      ":pinDevDependencies",
      ":semanticCommits"
    ],
    "packageRules": [
        {
          "automerge": true
        }
    ],
    "separateMinorPatch": true,
    "separateMultipleMajor": true,
    "separateMultipleMinor": true,
    "labels": ["auto-update"],
    "recreateWhen": "always",
    "automerge": true
  }
